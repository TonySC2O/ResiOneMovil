<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mantenimiento.RegistrarMantenimiento">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_700"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Registrar Mantenimiento"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Incidencia Asociada -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incidencia Asociada"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_incidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"/>

            <!-- Tipo de Mantenimiento -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tipo de Mantenimiento"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_tipo_mantenimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:entries="@array/mantenimientos_array" />

            <!-- Responsable -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Responsable"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_responsable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nombre del técnico"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"/>

            <!-- Fecha de Ejecución -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fecha de Ejecución"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_fecha_ejecucion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="dd / mm / yyyy"
                    android:focusable="false"
                    android:background="@android:drawable/edit_text"
                    android:padding="10dp"/>

                <ImageButton
                    android:id="@+id/btn_pick_fecha_ejecucion"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:src="@android:drawable/ic_menu_month"/>
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descripción de la Actividad"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_descripcion_mantenimiento"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="Detalles del trabajo realizado..."
                android:inputType="textMultiLine"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"/>

            <!-- Fotos ANTES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fotos del Antes"
                android:textSize="18sp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="#f2f2f2">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/fotos_antes_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"/>
                </HorizontalScrollView>
                <ImageButton
                    android:id="@+id/btn_adjuntar_antes"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <!-- Fotos DESPUÉS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fotos del Después"
                android:textSize="18sp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="#f2f2f2">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/fotos_despues_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"/>
                </HorizontalScrollView>
                <ImageButton
                    android:id="@+id/btn_adjuntar_despues"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <!-- Observaciones Adicionales -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Observaciones Adicionales"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_observaciones"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="top"
                android:hint="Comentarios opcionales..."
                android:inputType="textMultiLine"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btn_registrar_mantenimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Registrar Mantenimiento"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
