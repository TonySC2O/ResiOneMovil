<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="Registro.CrearRegistro">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:title="Crear cuenta"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Nombre -->
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo" />

            <!-- Correo -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:layout_marginTop="12dp" />

            <!-- Teléfono -->
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono (8 dígitos)"
                android:inputType="number"
                android:maxLength="8"
                android:layout_marginTop="12dp" />

            <!-- Identificación -->
            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identificación (9 dígitos)"
                android:inputType="number"
                android:maxLength="9"
                android:layout_marginTop="12dp" />

            <!-- Apartamento -->
            <EditText
                android:id="@+id/et_house_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de apartamento"
                android:layout_marginTop="12dp" />

            <!-- Habitantes -->
            <EditText
                android:id="@+id/et_habitantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad de habitantes"
                android:inputType="number"
                android:layout_marginTop="12dp" />

            <!-- Contraseña -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:layout_marginTop="12dp" />

            <!-- Rol -->
            <TextView
                android:text="Rol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Código empleado para admin -->
            <LinearLayout
                android:id="@+id/admin_code_container"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/et_admin_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Código empleado (4 letras + 2 números)" />
            </LinearLayout>

            <!-- Botones -->
            <Button
                android:id="@+id/btn_register"
                android:text="Crear cuenta"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cancel"
                android:text="Cancelar"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
