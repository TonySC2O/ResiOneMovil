<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_reporte"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Encabezado del reporte con indicador de estado y botón expandir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Indicador de color de estado -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="8dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_red"
                android:layout_marginEnd="8dp" />

            <!-- Título del reporte -->
            <TextView
                android:id="@+id/tv_reporte_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="* Reporte 1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <!-- Botón expandir/colapsar -->
            <ImageButton
                android:id="@+id/btn_expand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="expandir" />

        </LinearLayout>

        <!-- Contenido expandible del reporte -->
        <LinearLayout
            android:id="@+id/expanded_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <!-- Descripción del reporte -->
            <TextView
                android:id="@+id/tv_reporte_descripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginEnd="8dp" />

            <!-- Imagen adjunta (thumbnail) -->
            <ImageView
                android:id="@+id/img_reporte_thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@android:drawable/ic_menu_gallery"
                android:contentDescription="imagen adjunta" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
